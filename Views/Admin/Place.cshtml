@model List<Invantory.Models.Place>

@{
    Layout = "_PlaceLayout";
}

<table class="table table-hover table-bordered">
    <thead class="thead-dark">
        <tr>
            <th scope="col" width="20%">Section Name</th>
            <th scope="col" width="20%">Place Name</th>
            <th scope="col" width="20%">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var place in Model)
        {
            <tr>
                <td>@place.Section.Name</td>
                <td>@place.Name</td>
                <td>
                    <a href="/Admin/PlaceDelete/@place.Id" onclick="return confirm('Are you sure you want to delete this Place?')" class="btn btn-sm btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<style>
    .table {
        width: 100%;
        margin-bottom: 1.5rem;
        border-collapse: collapse;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

        .table thead {
            background-color: #343a40;
            color: #fff;
        }

    .table-bordered th, .table-bordered td {
        border: 1px solid #dee2e6;
        padding: 0.75rem;
        text-align: center;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f3f5;
    }

    .table tbody tr {
        transition: all 0.3s;
    }

    .btn-sm {
        padding: 5px 10px;
        font-size: 0.85rem;
        border-radius: 5px;
        transition: background-color 0.3s, color 0.3s;
    }

    .btn-outline-danger {
        color: #dc3545;
        border: 1px solid #dc3545;
    }

        .btn-outline-danger:hover {
            background-color: #dc3545;
            color: white;
        }

    .btn-outline-success {
        color: #28a745;
        border: 1px solid #28a745;
    }

        .btn-outline-success:hover {
            background-color: #28a745;
            color: white;
        }

    .table-hover tbody tr td a {
        margin: 0 5px;
    }
</style>
