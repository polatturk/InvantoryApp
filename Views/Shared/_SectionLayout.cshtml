<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">

    @RenderSection("Styles", false)
</head>
<body>

    <header class="p-3 bg-dark text-white">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-between">
                <a href="/Admin" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none" style="font-size: 24px;">
                    <i class="bi bi-person-circle me-2"></i> Dashboard
                </a>

                <ul class="nav col-12 col-lg-auto mb-2 justify-content-center mb-md-0">
                    <li><a href="Location" class="nav-link px-2 text-white">Location</a></li>
                    <li><a href="" class="nav-link px-2 text-white">Section</a></li>
                    <li><a href="Place" class="nav-link px-2 text-white">Place</a></li>
                </ul>

                <div class="text-end">
                    <a href="/" class="btn btn-warning">
                        return to inventory <i class="bi bi-arrow-return-left"></i>
                    </a>
                </div>
            </div>
        </div>
    </header>


    <div class="container py-4">
        @RenderBody()
    </div>

    @RenderSection("Scripts", false)
</body>
</html>